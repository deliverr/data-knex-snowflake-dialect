{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [ "es2017" ],
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.uspec.ts",
    "src/**/*.ispec.ts"
  ],
  "types": [ "typePatches" ]
}
